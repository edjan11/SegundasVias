{
  "name": "monitor-tjse-maternidade",
  "version": "1.0.0",
  "description": "Monitor de solicitações de maternidade do TJSE com notificações",
  "private": true,
  "main": "src/electron-main.js",
  "scripts": {
    "start": "electron .",
    "open-tjse": "node src/simple-start.js",
    "build": "electron-builder --win --x64",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.tjse.monitor.maternidade",
    "productName": "Monitor TJSE Maternidade",
    "win": {
      "target": ["portable"],
      "icon": "icons/maternidade-ok.ico"
    },
    "portable": {
      "artifactName": "MonitorTJSE-Maternidade-Portable.exe"
    },
    "files": [
      "src/**/*",
      "icons/**/*",
      "package.json"
    ],
    "directories": {
      "output": "dist"
    }
  },
  "dependencies": {},
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^26.4.0"
  }
}
